<script type="text/javascript">
//浅色/深色模式
var cssType = window.localStorage["lightDarkCss"];
if(cssType == "dark"){
    document.write("<link rel='stylesheet' href='/css/style-dark.css?rev=@@hash' id='lightDarkCss'>");
}else{
    document.write("<link rel='stylesheet' href='/css/style-light.css?rev=@@hash' id='lightDarkCss'>");
}
</script>
<header class="main-header" <% if(theme.banner.img){ %> style="background-image:url(
    <%= url_for(theme.banner.img) %>)"
    <%}%> >
    <div class="main-header-box">
        <a class="header-avatar" href="/" title='<%= config.author %>'>
            <%- image_tag('img/avatar.jpg',{alt:'logo头像',class:'img-responsive center-block'}) %>
        </a>
        <div class="branding">
            <% if(theme.branding){ %>
            <h2>
                <%= theme.branding %>
            </h2>
            <% } else { %>
            <%- image_tag('img/header.gif',{alt:'ICQL',class:'img-responsive center-block',id:'header-gif'}) %>
            <% } %>
        </div>
    </div>
</header>